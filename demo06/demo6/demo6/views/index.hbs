<h1>{{title}}</h1>
<div class="row">
    <div class="col-md-3">
        <form method="POST">
            <legend>Location:</legend>
            <fieldset>
                <div class="form-group">
                    <label for="country">Country:</label>
                    <input class="form-control" type="text" id="country" name="country">
                </div>
                <div class="form-group">
                    <label for="city">City:</label>
                    <input class="form-control" type="text" id="city" name="city">
                </div>
            </fieldset>
            <fieldset>
                <legend>Population:</legend>
                <div class="form-group">
                    <label for="populationMin">Min:</label>
                    <input class="form-control" type="number" id="populationMin" name="populationMin" value="0">
                </div>
                <div class="form-group">
                    <label for="populationMax">Max:</label>
                    <input class="form-control" type="number" id="populationMax" name="populationMax" value="0">
                </div>
            </fieldset>
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
    </div>
    <div class="col-md-9">
        <output>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>&nbsp;</td>
                        <td>City</td>
                        <td>Region</td>
                        <td>Population</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each cities }}
                    <tr>
                        <td><span class="flag-icon flag-icon-{{Country}}"></span></td>                        
                        <td>{{AccentCity}}</td>
                        <td>{{Region}}</td>
                        <td>{{Population}}</td>
                        <td>
                            <a class="btn btn-primary" href="cities/edit/{{_id}}"><span class="glyphicon glyphicon-pencil"></span></a>
                            |
                            <a class="btn btn-danger" href="cities/delete/{{_id}}"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </output>
    </div>
</div>